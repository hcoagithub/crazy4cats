
<div class="row">

  <div class="col-md-5">
    <%= render @aventura %>
    
    <div class="d-flex justify-content-around w-100 mt-2">
      <%= link_to "Edit this aventura", edit_aventura_path(@aventura), class:'btn btn-success' %> 
      
      <%= link_to "Back to aventuras", aventuras_path, class:'btn btn-secondary' %>
      <%= button_to "Destroy this aventura", @aventura, class:'btn btn-danger', method: :delete %>
    </div>  
    
  </div>  
  <div class="col-md-5">  
    <%= render 'comentarios/form' %>
    <%= render 'comentarios/aventura_comentarios' %>
  </div>
</div>
